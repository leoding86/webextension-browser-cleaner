{
    "background": {
        "scripts": [
            "backgrounds/background.js"
        ],
        "persistent": false
    },
    "options_page": "options_page/index.html",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "__MSG_extName__"
    },
    "short_name": "BC",
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "default_locale": "en",
    "description": "__MSG_extDescription__",
    "icons": {
        "128": "icon128.png",
        "16": "icon16.png",
        "48": "icon48.png"
    },
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "version": "0.9",
    "version_name": "v0.9 beta",
    "permissions": [
        "storage",
        "tabs",
        "browsingData",
        "notifications"
    ]
}
